<%= form_for(@wine, html:{class: 'form-horizontal'}) do |f| %>
<%= render 'shared/validation_errors', object: @wine %>

  <%= f.label :name %> <%= f.text_field :name, autofocus: true, class: "form-control" %><br />

  <%= f.label :year %> <%= f.text_field :year, class: "form-control" %><br />

  <%= f.label :winery %> <%= f.text_field :winery, class: "form-control" %><br />

  <%= f.label :country %> <%= f.text_field :country, class: "form-control" %><br />

    <%= f.label :varietal %> <%= f.select :varietal, Wine::VARIETALS, { prompt: "Pick one" } %>
<br />
  <p>
  	<%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', wines_path %>
  </p>
<% end %>